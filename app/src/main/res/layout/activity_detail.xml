<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adiputra.movie_app.Activity.DetailActivity">


    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ivBackdrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp" />

    <Button
        android:id="@+id/btnStarred"
        android:clipChildren="false"
        android:background="@drawable/ic_star_border_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />


    <ImageView
        android:id="@+id/ivPlayButton"
        android:layout_marginTop="@dimen/_70sdp"
        android:src="@drawable/ic_play_circle_filled_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp" />

    <ImageView
        android:id="@+id/ivPosters"
        android:layout_marginTop="@dimen/_155sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_140sdp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivPosters"
        android:layout_below="@id/ivBackdrop"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/tvRuntime"
        android:layout_toRightOf="@+id/ivPosters"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/ivPosters"
        android:layout_below="@+id/tvRuntime"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/starRating"
        android:background="@drawable/ic_stars_black_24dp"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/starRating"
        android:layout_below="@+id/tvRuntime"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnBudget"
        android:layout_below="@+id/ivPosters"
        android:text="BUY NOW $99"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOverview"
        android:padding="@dimen/_15sdp"
        android:layout_below="@+id/btnBudget"
        android:textColor="#000"
        android:gravity="fill_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvId"
        android:text="id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
